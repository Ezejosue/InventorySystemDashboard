                "tags": [
                    "Categories"
                ],
                "summary": "Delete a category",
                "operationId": "6b203a9d1a8c8aa75716dc24525d8c84",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the category to delete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
